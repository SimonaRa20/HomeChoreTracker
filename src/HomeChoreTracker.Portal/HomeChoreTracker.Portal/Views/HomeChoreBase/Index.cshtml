@using HomeChoreTracker.Portal.Models.HomeChoreBase

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home Chores";
}

@section HeadContent
{
    <title>@ViewData["Title"] - Home Chore Tracker</title>
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet" asp-append-version="true">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" asp-append-version="true">
    <link href="css/bootstrap.min.css" rel="stylesheet" />

}



<!-- Display the list of home chore bases in a table -->


<div class="row">

    <!-- Border Left Utilities -->
    <div class="col-lg-12">

        <div class="card mb-4 py-3 border-left-primary">
            <div class="card-body">
                <h2>@ViewData["Title"]</h2>

                @if (Model != null && Model.Count > 0)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Chore Type</th>
                                <th>Frequency</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var choreBase in Model)
                            {
                                <tr>
                                    <td>@choreBase.Name</td>
                                    <td>@choreBase.ChoreType</td>
                                    <td>@choreBase.Frequency</td>
                                    <td>@(string.IsNullOrEmpty(choreBase.Description) ? "-" : choreBase.Description)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No home chore bases found.</p>
                }
            </div>
        </div>
    </div>
</div>



<!-- Your scripts if needed -->
<script src="~/vendor/jquery/jquery.min.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
<script src="~/js/sb-admin-2.min.js"></script>
<script src="~/vendor/chart.js/Chart.min.js"></script>
<script src="~/js/demo/chart-area-demo.js"></script>
<script src="~/js/demo/chart-pie-demo.js"></script>
