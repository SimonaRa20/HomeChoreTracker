@page
@model HomeChoreTracker.Portal.Pages.Profile.AvatarsModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section HeadContent
{
    <title>@ViewData["Title"] - Home Chore Tracker</title>
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet" asp-append-version="true">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" asp-append-version="true">
    <!-- Add the following lines to include required Bootstrap and jQuery files -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}

@if (!User.Identity.IsAuthenticated)
{
    Response.Redirect("/Auth/Login");
}
else if (User.IsInRole("User"))
{
    <div class="modal fade" id="avatarSettingModal" tabindex="-1" role="dialog" aria-labelledby="avatarSettingModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="avatarSettingModalLabel">Set Avatar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <img src="" alt="Avatar Image" id="avatarSettingImage" class="img-fluid" style="max-width:100px; max-height:100px">
                    <p class="mt-3">
                        Are you sure you want to set this image as your avatar?
                    </p>
                    <form id="avatarSettingForm" asp-page-handler="Set" method="post">
                        <input type="hidden" id="avatarIdSetting" name="avatarId">
                        <button type="submit" class="btn btn-primary mt-3">Set Avatar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="imagePurchaseModal" tabindex="-1" role="dialog" aria-labelledby="imagePurchaseModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="imagePurchaseModalLabel">Buy Avatar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <img src="" alt="Avatar Image" id="imagePurchaseImage" class="img-fluid" style="max-width:100px; max-height:100px">

                    <p>
                        Are you sure you want to buy this image?
                    </p>
                    <p id="buyErrorMessage" class="text-danger" style="display:none;"></p>
                    <form id="imagePurchaseForm" asp-page-handler="Buy" method="post">
                        <input type="hidden" id="avatarIdPurchase" name="avatarId">
                        <button type="submit" id="buyButton" class="btn btn-primary" disabled>Buy Image</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-light btn-sm mb-2" href="~/Profile"><i class="fas fa-user fa-sm fa-fw mr-2"></i>Profile</a>
            <a class="btn btn-light btn-sm mb-2" asp-page="./BusyIntervals"><i class="fa fa-hourglass-start mr-2" aria-hidden="true"></i>BusyInterval</a>
            <a class="btn btn-secondary btn-sm mb-2" asp-page="./Avatars"><i class="fa fa-user-astronaut mr-2" aria-hidden="true"></i>Avatars</a>
            <div class="card border-left-primary" style="border-width: 2px;">
                <div class="card-body">
                    <h4 class="d-inline">Your points: <h3 class="text-success d-inline">@Model.UserPoints</h3></h4>
                    @if (Model.UserAvatar.Image == null)
                    {
                        <div class="row">
                            <div class="mr-1 mb-2">
                                <div class="card @((Model.UserAvatar != null) ? "border-success" : "")" style="border-width: 5px;">
                                    <div class="card-body">
                                        <div class="text-center">
                                            <i class="fas fa-user fa-sm mr-2 text-gray-400" style="font-size: 80px;"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @foreach (var group in Model.AvatarsResponses.GroupBy(a => a.AvatarType))
                    {
                        <h5>@group.Key</h5>
                        <div class="row">

                            @foreach (var avatar in group)
                            {
                                <div class="mr-1 mb-2">
                                    <div class="card @((avatar.Id == Model.UserAvatar.Id || Model.UserAvatar == null) ? "border-success" : "")" style="border-width: 5px;">
                                        <div class="card-body">
                                            <div class="text-center">
                                                @if (avatar.Image != null && avatar.Image.Length > 0)
                                                {
                                                    <div class="d-flex flex-column align-items-center">
                                                        <div style="overflow: hidden; width:80px; height:80px; overflow: hidden;">
                                                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(avatar.Image)" alt="Avatar Image" class="card-img-top w-100" style="object-fit: cover; height:100%" data-avatar-id="@avatar.Id" />
                                                        </div>
                                                        @if (!avatar.IsPurchased)
                                                        {
                                                            <div class="mt-2">
                                                                @if (group.Key.ToString() == "Intermediate")
                                                                {
                                                                    <p class="m-0">Price: 100 px</p>
                                                                    <input type="hidden" class="points-needed" value="100">
                                                                }
                                                                else if (group.Key.ToString() == "Advanced")
                                                                {
                                                                    <p class="m-0">Price: 1000 px</p>
                                                                    <input type="hidden" class="points-needed" value="1000">
                                                                }
                                                                else if (group.Key.ToString() == "Bonus")
                                                                {
                                                                    <p class="m-0">Price: 10000 px</p>
                                                                    <input type="hidden" class="points-needed" value="10000">
                                                                }
                                                            </div>
                                                        }
                                                        <input type="hidden" class="avatar-purchased" value="@avatar.IsPurchased.ToString()" />
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('.card-body').on('click', 'img', function () {
                var avatarId = $(this).data('avatar-id');
                var imageUrl = $(this).attr('src');
                var isPurchased = $(this).closest('.card').find('.avatar-purchased').val();
                var pointsNeeded = parseInt($(this).closest('.card').find('.points-needed').val());
                console.log(pointsNeeded)
                $('#avatarIdSetting').val(avatarId);
                $('#avatarIdPurchase').val(avatarId);
                $('#avatarSettingImage').attr('src', imageUrl);
                $('#imagePurchaseImage').attr('src', imageUrl);

                if (isPurchased === 'True') {
                    $('#avatarSettingModal').modal('show');
                } else {
                    if (pointsNeeded > @Model.UserPoints) {
                        $('#buyErrorMessage').text('You don\'t have enough points to buy this image.');
                        $('#buyErrorMessage').show();
                        $('#buyButton').prop('disabled', true);
                    } else {
                        $('#buyErrorMessage').hide();
                        $('#buyButton').prop('disabled', false);
                    }
                    $('#imagePurchaseModal').modal('show');
                }
            });
        });

    </script>


}
else
{
    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-4 py-3 border-left-primary">
                <div class="collapse show">
                    <div class="card-body">
                        <p>You don't have permission to view this content.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
