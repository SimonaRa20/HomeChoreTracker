@page "{id}"
@model HomeChoreTracker.Portal.Pages.Purchase.IndexModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section HeadContent
{
    <title>@ViewData["Title"] - Home Chore Tracker</title>
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet" asp-append-version="true">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" asp-append-version="true">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <a class="btn btn-secondary btn-sm mb-2" href="/Purchase/@Model.Id"><i class="fa fa-archive mr-2" aria-hidden="true"></i>Inventory</a>
        <a class="btn btn-light btn-sm mb-2" asp-page="./AddProduct" asp-route-id="@Model.Id"><i class="fa fa-plus-circle mr-2" aria-hidden="true"></i>Add product</a>
        <a class="btn btn-light btn-sm mb-2" asp-page="./AddPurchase" asp-route-id="@Model.Id"><i class="fa fa-plus-circle mr-2" aria-hidden="true"></i>Create purchase</a>

        <div class="card mb-4 py-3 border-left-primary">
            <div class="card-body">
                @if (Model.Products != null && Model.Products.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Expiration Date</th>
                                <th>Quantity</th>
                                <th>Quantity Type</th>
                                <th>Product Type</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Products)
                            {
                                <tr>
                                    <td>@product.Title</td>
                                    <td>@(product.ExpirationDate == null ? "-" : product.ExpirationDate.ToString())</td>
                                    <td>@product.Quantity</td>
                                    <td>@product.QuantityType</td>
                                    <td>@product.ProductType</td>
                                    <td>
                                        <button class='btn btn-sm' data-toggle="modal" data-target="#updateQuantityModal" data-product-id="@product.Id" data-product-title="@product.Title" data-product-quantity="@product.Quantity">
                                            <i class="fa fa-ellipsis-h" aria-hidden="true"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No products found.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="updateQuantityModal" tabindex="-1" role="dialog" aria-labelledby="updateQuantityModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateQuantityModalLabel">Update Quantity</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="updateQuantityForm" method="post" asp-page-handler="UpdateQuantity">
                <div class="modal-body">
                    <input type="hidden" id="productId" name="ProductId" />
                    <input type="hidden" id="maxQuantity" />
                    <div class="form-group">
                        <label for="newQuantity">Update Quantity</label>
                        <input type="number" step="0.01" min="0" class="form-control" id="newQuantity" name="NewQuantity" required />
                        <span id="quantityErrorMessage" class="text-danger" style="display: none;">New quantity cannot exceed the existing quantity.</span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="updateButton">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#updateQuantityModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var productId = button.data('product-id');
            var productTitle = button.data('product-title');
            var productQuantity = button.data('product-quantity');

            var modal = $(this);
            modal.find('.modal-title').text('Update Quantity - ' + productTitle);
            modal.find('#productId').val(productId);
            modal.find('#newQuantity').val(productQuantity);
            modal.find('#maxQuantity').val(productQuantity);
        });

        $('#updateQuantityForm').submit(function (event) {
            var newQuantity = parseFloat($('#newQuantity').val());
            var maxQuantity = parseFloat($('#maxQuantity').val());
            if (newQuantity > maxQuantity) {
                var errorMessage = 'New quantity cannot exceed the existing quantity (' + maxQuantity + ').';
                $('#quantityErrorMessage').text(errorMessage).show();
                event.preventDefault();
            } else {
                $('#quantityErrorMessage').hide();
            }
        });
    });
</script>

