@page "{id:int}"
@model HomeChoreTracker.Portal.Pages.Purchase.AddPurchaseModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section HeadContent
{
    <title>@ViewData["Title"] - Home Chore Tracker</title>
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet" asp-append-version="true">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" asp-append-version="true">
    <!-- Add the following lines to include required Bootstrap and jQuery files -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <a class="btn btn-light btn-sm" href="/Purchase/@Model.Id"><i class="fa fa-archive mr-2" aria-hidden="true"></i>Inventory</a>
        <a class="btn btn-light btn-sm" asp-page="./AddProduct" asp-route-id="@Model.Id"><i class="fa fa-plus-circle mr-2" aria-hidden="true"></i>Add product</a>
        <a class="btn btn-secondary btn-sm" asp-page="./AddPurchase" asp-route-id="@Model.Id"><i class="fa fa-plus-circle mr-2" aria-hidden="true"></i>Create purchase</a>


        <div class="card mb-4 py-3 mt-2 border-left-primary">
            <div class="card-body">
                <form method="post">
                    <div class="form-group">
                        <label for="purchaseDate">Purchase Date</label>
                        <input type="date" class="form-control" id="purchaseDate" name="Purchase.PurchaseDate" asp-for="Purchase.PurchaseDate" required>
                    </div>

                    <div id="shoppingItems">
                        <div class="form-row shopping-item">
                            <div class="form-group col-md-6">
                                <label for="product">Product</label>
                                <select class="form-control" name="Purchase.Items[0].ProductId" required>
                                    <option value="">Select Product</option>
                                    @foreach (var product in Model.Products)
                                    {
                                        <option value="@product.Id">@product.Title - @product.ProductType - @product.QuantityType</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="quantity">Quantity</label>
                                <input type="number" class="form-control" name="Purchase.Items[0].Quantity" step="0.01" min="0" required>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary" id="addShoppingItem">Add Item</button>

                    <hr>
                    <button type="submit" class="btn btn-success">Create Purchase</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#addShoppingItem').click(function () {
            var newItem = $('.shopping-item').first().clone();
            // Find the last index used in the form
            var lastIndex = $('#shoppingItems .shopping-item').length - 1;
            // Increment the index to assign a unique value for each cloned item
            var newIndex = lastIndex + 1;
            // Update the name attributes of the cloned item
            newItem.find('select').attr('name', 'Purchase.Items[' + newIndex + '].ProductId');
            newItem.find('input').attr('name', 'Purchase.Items[' + newIndex + '].Quantity');
            newItem.find('input').val('');
            $('#shoppingItems').append(newItem);
        });
    });


</script>

