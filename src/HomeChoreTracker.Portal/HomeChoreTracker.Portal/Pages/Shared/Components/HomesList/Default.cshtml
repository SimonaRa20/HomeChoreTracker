@model List<HomeChoreTracker.Portal.Models.Home.HomeResponse>

@if(Model.Count > 0)
{
	<li class="nav-item">
		@if (Model.Count == 1)
		{
			<a class="nav-link" href="~/Home/@Model[0].Id">
				<i class="fa fa-home" aria-hidden="true"></i>
				<span>Home</span>
			</a>
		}
		else
		{
			<a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#pages"
			   aria-expanded="true" aria-controls="pages">
				<i class="fa fa-home" aria-hidden="true"></i>
				<span>Homes</span>
			</a>
			<div id="pages" class="collapse" aria-labelledby="pages" data-parent="#accordionSidebar">
				<div class="bg-white py-2 collapse-inner rounded">
					@foreach (var home in Model)
					{
						<a class="collapse-item" href="~/Home/@home.Id">@home.Title</a>
					}
				</div>
			</div>
		}
	</li>
}
