@page
@model HomeChoreTracker.Portal.Pages.Challenges.CreateModel
@section HeadContent
{
    <title>@ViewData["Title"] - Home Chore Tracker</title>
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet" asp-append-version="true">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" asp-append-version="true">
    <!-- Add the following lines to include required Bootstrap and jQuery files -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}

@if (!User.Identity.IsAuthenticated)
{
	Response.Redirect("/Auth/Login");
}
else if (User.IsInRole("User"))
{
	<div class="row">
		<div class="col-lg-12">
			<a class="btn btn-light btn-sm mb-2" href="~/Challenges"><i class="fas fa-user fa-sm fa-fw mr-2"></i>Current Challenges</a>
			<a class="btn btn-secondary btn-sm mb-2" asp-page="./Create"><i class="fa fa-hourglass-start mr-2" aria-hidden="true"></i>Create challenge</a>
			<a class="btn btn-light btn-sm mb-2" asp-page="./History"><i class="fa fa-user-astronaut mr-2" aria-hidden="true"></i>History</a>
            <div class="card mb-4 py-3 border-left-primary">
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label for="OpponentType">Challenge Type</label>
                            <select class="form-control" id="OpponentType" name="CreateAvatar.OpponentType" asp-for="CreateChallenge.OpponentType" required>
                                @foreach (var avatarType in Enum.GetValues(typeof(HomeChoreTracker.Portal.Constants.OpponentType)))
                                {
                                    <option value="@((int)avatarType)">@avatarType</option>
                                }
                            </select>
                            <span asp-validation-for="CreateChallenge.OpponentType" class="text-danger"></span>
                        </div>

                        <div class="form-group" id="UserOpponentGroup" style="display:none;">
                            <label for="OpponentUserId">Choose a user that will meet the challenge</label>
                            <select class="form-control" id="OpponentUserId" name="CreateChallenge.OpponentUserId" asp-for="CreateChallenge.OpponentUserId">
                                @foreach (var home in Model.UserResponses)
                                {
                                    <option value="@home.Id">@home.UserName</option>
                                }
                            </select>
                        </div>

                        <div class="form-group" id="HomeGroup">
                            <label for="HomeId">Choose a home that will meet the challenge</label>
                            <select class="form-control" id="OpponentHomeId" name="CreateChallenge.HomeId" asp-for="CreateChallenge.HomeId">
                                @foreach (var home in Model.HomeUserResponses)
                                {
                                    <option value="@home.Id">@home.Title</option>
                                }
                            </select>
                        </div>

                        <div class="form-group" id="HomeOpponentGroup" >
                            <label for="OpponentHomeId">Choose a opponent home that will meet the challenge</label>
                            <select class="form-control" id="OpponentHomeId" name="CreateChallenge.OpponentHomeId" asp-for="CreateChallenge.OpponentHomeId">
                                @foreach (var home in Model.HomeOpponentsResponses)
                                {
                                    <option value="@home.Id">@home.Title</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="ChallengeType">Challenge Type</label>
                            <select class="form-control" id="ChallengeType" name="CreateAvatar.ChallengeType" asp-for="CreateChallenge.ChallengeType" required>
                                @foreach (var avatarType in Enum.GetValues(typeof(HomeChoreTracker.Portal.Constants.ChallengeType)))
                                {
                                    <option value="@((int)avatarType)">@avatarType</option>
                                }
                            </select>
                            <span asp-validation-for="CreateChallenge.ChallengeType" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="ChallengeCount">Tasks/Points count</label>
                            <input type="number" class="form-control" id="ChallengeCount" name="CreateChallenge.ChallengeCount" asp-for="CreateChallenge.ChallengeCount" step="1" min="1">
                            <span asp-validation-for="CreateChallenge.ChallengeCount" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="ChallengeDuration">Challenge Duration</label>
                            <div class="input-group">
                                <input type="number" class="form-control" id="Days" name="CreateChallenge.Days" placeholder="Days" min="0" step="1">
                                <input type="number" class="form-control" id="Hours" name="CreateChallenge.Hours" placeholder="Hours" min="0" step="1">
                                <input type="number" class="form-control" id="Minutes" name="CreateChallenge.Minutes" placeholder="Minutes" min="0" step="1">
                                <input type="number" class="form-control" id="Seconds" name="CreateChallenge.Seconds" placeholder="Seconds" min="0" step="1">
                            </div>
                            <span asp-validation-for="CreateChallenge.Days" class="text-danger"></span>
                            <span asp-validation-for="CreateChallenge.Hours" class="text-danger"></span>
                            <span asp-validation-for="CreateChallenge.Minutes" class="text-danger"></span>
                            <span asp-validation-for="CreateChallenge.Seconds" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Create</button>
                    </form>
                </div>
            </div>
		</div>
	</div>
}
else
{
	<div class="row">
		<div class="col-lg-12">
			<div class="card mb-4 py-3 border-left-primary">
				<div class="collapse show">
					<div class="card-body">
						<p>You don't have permission to view this content.</p>
					</div>
				</div>
			</div>
		</div>
	</div>
}
<script>
    $(document).ready(function () {
        $('#OpponentType').change(function () {
            var selectedType = $(this).val();
            console.log(selectedType)
            if (selectedType == 0) { // Assuming 'Team' is represented by value 1
                $('#HomeOpponentGroup').show();
                $('#HomeGroup').show();
                $('#UserOpponentGroup').hide();
            } else {
                $('#UserOpponentGroup').show();
                $('#HomeOpponentGroup').hide();
                $('#HomeGroup').hide();
            }
        });

        // Validate Challenge Count
        $('#ChallengeCount').change(function () {
            var count = $(this).val();
            if (count < 1) {
                $(this).next('.text-danger').text('Count must be at least 1.');
            } else {
                $(this).next('.text-danger').text('');
            }
        });

        // Validate Challenge Duration (At least one of Days, Hours, Minutes, or Seconds must be more than 0)
        $('#Days, #Hours, #Minutes, #Seconds').change(function () {
            var days = parseInt($('#Days').val()) || 0;
            var hours = parseInt($('#Hours').val()) || 0;
            var minutes = parseInt($('#Minutes').val()) || 0;
            var seconds = parseInt($('#Seconds').val()) || 0;

            if (days === 0 && hours === 0 && minutes === 0 && seconds === 0) {
                $(this).next('.text-danger').text('At least one duration field must be more than 0.');
            } else {
                $(this).next('.text-danger').text('');
            }
        });
    });
</script>
